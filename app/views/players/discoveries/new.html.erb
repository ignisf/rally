<div class="container">
    <% if @treasure_discovery.errors[:answer].any? %>
        <div class="row">
            <div class="col">
                <div class="alert alert-danger" role="alert">
                    The specified answer was not correct, please try again.
                </div>
            </div>
        </div>
    <% end %>
    <div class="row">
        <div class="col-xl-4 offset-xl-4 mb-3 mb-lg-4">
            <%= form_with model: @treasure_discovery, url: treasure_discovery_path, method: :post do |form| %>
                <div class="card">
                    <div class="card-header">
                        <%= @treasure.name %>
                    </div>
                    <div class="card-body">
                        <p>Congratulations! You discovered <%= @treasure.name %>!</p>
                        <p>Now, please answer the following question:</p>
                        <%= simple_format @treasure.question %>

                        <div class="form-group">
                            <%= form.collection_radio_buttons :answer, [['A', 'Answer A'], ['B', 'Answer B'], ['C', 'Answer C'], ['D', 'Answer D']], :first, :last do |b| %>
                                <div class="form-check form-check-reverse">
                                    <%= b.label(class: "form-check-label") %>
                                    <%= b.radio_button(class: "form-check-input") %>
                                </div>
                            <% end %>
                        </div>
                    </div>

                    <div class="card-footer container">
                        <div class="row">
                            <div class="col">
                                <%= link_to 'Back to the hint', root_path, class: 'btn btn-secondary' %>

                            </div>
                            <div class="col text-end">
                                <%= form.submit 'Submit answer', class: 'btn btn-primary' %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
